<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F3F2F7"
    android:orientation="vertical">

    <include layout="@layout/main_top" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/line_gray" />

        <LinearLayout
            android:id="@+id/ll_service_ip"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/input"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="服务器设置:"
                android:textColor="@color/text_main_bottom"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_service_ip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_main_bottom"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:background="@color/line_gray" />

        <LinearLayout
            android:id="@+id/ll_service_host"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/input"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="端口号设置:"
                android:textColor="@color/text_main_bottom"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_service_host"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_main_bottom"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/line_gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/input"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:text="扫描功率 : "
                android:textColor="@color/text_main_bottom"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_min"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/selector_login_button"
                android:text="-"
                android:textColor="@drawable/btn_text_color_login"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:focusable="false"
                android:gravity="center"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_plus"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:background="@drawable/selector_login_button"
                android:text="+"
                android:textColor="@drawable/btn_text_color_login" />

            <Button
                android:id="@+id/button_set"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/selector_login_button"
                android:text="设置"
                android:textColor="@drawable/btn_text_color_login" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/input"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="语音提示:"
                android:textColor="@color/text_main_bottom" />

            <ToggleButton
                android:id="@+id/toggleButton0"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/select_setting_btn"
                android:textOff=" "
                android:textOn=" " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/input"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="消息通知:"
                android:textColor="@color/text_main_bottom" />

            <ToggleButton
                android:id="@+id/toggleButton1"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/select_setting_btn"
                android:textOff=" "
                android:textOn=" " />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/line_gray" />

        <LinearLayout
            android:id="@+id/ll_car_service_ip"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@drawable/select_normal_item_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="车载读卡器Ip:"
                android:textColor="@color/text_main_bottom" />

            <TextView
                android:id="@+id/tv_car_service_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/text_main_bottom" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_modify_password"
            android:layout_width="fill_parent"
            android:layout_height="52dp"
            android:background="@drawable/select_normal_item_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="修改密码"
                android:textColor="@color/text_main_bottom" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/line_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>