<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/toastlayout"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <ImageButton
            android:id="@+id/chukushenqing"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/cuku_select_bt" />

        <ImageButton
            android:id="@+id/kufangxinxi"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/kufang_select_bt" />

        <ImageButton
            android:id="@+id/cukushenpi"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/outgoing_select_bt" />
    </LinearLayout>

</LinearLayout>
