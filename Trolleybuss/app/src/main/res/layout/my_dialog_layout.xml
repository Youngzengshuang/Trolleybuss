<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="400dp"
    android:background="@drawable/ld_di"
    android:layout_gravity="center"
    android:padding="3dp" >

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_my_dialog"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_my_dialog_titile"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:gravity="center"
            android:text="提示"
            android:textColor="@color/mainthem" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/line_gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_my_dialog_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:paddingBottom="16.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="16.0dip"
            android:text="这个就是自定义的dialog"
            android:textColor="@color/mainthem" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/line_gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_mydialog_positive"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/select_btn_dialog_qr_cancel"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/title_background_bule" />

            <View
                android:layout_width="1.0px"
                android:layout_height="fill_parent"
                android:background="@color/line_gray" />

            <Button
                android:id="@+id/btn_mydialog_negative"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/select_btn_dialog_qr_cancel"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/title_background_bule" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>